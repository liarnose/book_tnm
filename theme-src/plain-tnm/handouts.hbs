              <p class="cast-ps">【PS：{{ps}}】</p>
            </div>
            <div class="cast-text">
              {{#each text}}
                <p>{{this}}</p>
              {{/each}}
            </div>
          {{/with}}{{/if}}
      </td>
    </tr>
    <tr>
      <td rowspan="2" class="handout-regulation">
        <h3>レギュレーション</h3>
        {{#if exp}}
          <h4>経験点の使用</h4>
          <p>{{exp}}</p>
        {{/if}}
        {{#if kamiwazaNeed}}
          <h4>必要な神業</h4>
          <p>{{{kamiwazaNeed}}}</p>
        {{/if}}
