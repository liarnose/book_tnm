              {{#each text}}
                <p>{{this}}</p>
              {{/each}}
            </div>
          {{/with}}{{/if}}
      </td>
    </tr>
    <tr>
      <td class="handout-cast">
        {{#if cast.[2]}}{{#with cast.[2]}}
